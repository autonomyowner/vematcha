generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserTier {
  FREE
  PRO
}

enum AnalysisStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum SessionType {
  REGULAR
  EMDR_FLASH
}

enum EmdrPhase {
  PREPARATION
  TRAUMA_RECALL
  BILATERAL_START
  POSITIVE_RESOURCE
  BILATERAL_POSITIVE
  INTEGRATION
  COMPLETED
}

model User {
  id        String   @id // Clerk user ID
  email     String   @unique
  firstName String?  @map("first_name")
  tier      UserTier @default(FREE)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  analyses      Analysis[]
  usageLimit    UsageLimit?
  conversations Conversation[]
  voiceSessions VoiceSession[]

  @@map("users")
}

model Analysis {
  id             String         @id @default(cuid())
  userId         String         @map("user_id")
  inputText      String         @map("input_text") @db.Text
  status         AnalysisStatus @default(PENDING)
  biases         Json?
  patterns       Json?
  insights       Json?
  emotionalState Json?          @map("emotional_state")
  processingTime Int?           @map("processing_time") // milliseconds
  errorMessage   String?        @map("error_message")
  createdAt      DateTime       @default(now()) @map("created_at")
  completedAt    DateTime?      @map("completed_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@map("analyses")
}

model UsageLimit {
  id                  String   @id @default(cuid())
  userId              String   @unique @map("user_id")
  analysesThisMonth   Int      @default(0) @map("analyses_this_month")
  chatMessagesThisMonth Int    @default(0) @map("chat_messages_this_month")
  monthResetAt        DateTime @map("month_reset_at")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("usage_limits")
}

model Conversation {
  id          String      @id @default(cuid())
  userId      String      @map("user_id")
  title       String?
  sessionType SessionType @default(REGULAR) @map("session_type")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  // Real-time analysis (updated with each message)
  emotionalState    Json?   @map("emotional_state")
  biases            Json?
  patterns          Json?
  insights          Json?
  analysisUpdatedAt DateTime? @map("analysis_updated_at")

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages      Message[]
  emdrSession   EmdrSession?
  voiceSessions VoiceSession[]

  @@index([userId, updatedAt(sort: Desc)])
  @@map("conversations")
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

model Message {
  id             String   @id @default(cuid())
  conversationId String   @map("conversation_id")
  role           MessageRole
  content        String   @db.Text
  createdAt      DateTime @default(now()) @map("created_at")

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@map("messages")
}

model EmdrSession {
  id             String    @id @default(cuid())
  conversationId String    @unique @map("conversation_id")
  currentPhase   EmdrPhase @default(PREPARATION) @map("current_phase")

  // Configuration
  blinkIntervalMin Int @default(3000) @map("blink_interval_min")
  blinkIntervalMax Int @default(8000) @map("blink_interval_max")
  blinksPerSet     Int @default(5) @map("blinks_per_set")
  tapIntervalMs    Int @default(1000) @map("tap_interval_ms")

  // Tracking
  distressStart  Int? @map("distress_start")
  distressEnd    Int? @map("distress_end")
  setsCompleted  Int  @default(0) @map("sets_completed")

  // Timestamps
  startedAt   DateTime  @default(now()) @map("started_at")
  completedAt DateTime? @map("completed_at")

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("emdr_sessions")
}

enum VoiceSessionStatus {
  active
  completed
  failed
  cancelled
}

model VoiceSession {
  id             String             @id @default(cuid())
  userId         String             @map("user_id")
  conversationId String?            @map("conversation_id") // Optional link to conversation
  vapiCallId     String             @unique @map("vapi_call_id") // Vapi's call ID
  sessionType    String             @map("session_type") // 'general-therapy' | 'flash-technique' | 'crisis-support'
  status         VoiceSessionStatus @default(active)

  // Session data
  transcript     String?            @db.Text
  duration       Int?               // Duration in seconds
  vapiCosts      Json?              @map("vapi_costs") // Cost breakdown from Vapi

  // Timestamps
  createdAt      DateTime           @default(now()) @map("created_at")
  startedAt      DateTime?          @map("started_at")
  endedAt        DateTime?          @map("ended_at")

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation Conversation? @relation(fields: [conversationId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt(sort: Desc)])
  @@index([vapiCallId])
  @@map("voice_sessions")
}
