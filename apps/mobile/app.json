{
  "expo": {
    "name": "Matcha",
    "slug": "matcha",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "matcha",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#5a9470"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.matcha.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Matcha needs microphone access to enable voice therapy sessions where you can talk with your AI companion.",
        "UIBackgroundModes": [
          "audio",
          "voip"
        ]
      }
    },
    "android": {
      "package": "com.matcha.app",
      "softwareKeyboardLayoutMode": "pan",
      "useNextNotificationsApi": true,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "privacyPolicyUrl": "https://www.vematcha.xyz/privacy"
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#5a9470",
          "sounds": []
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24,
            "compileSdkVersion": 35,
            "targetSdkVersion": 34
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#5a9470",
      "androidMode": "default",
      "androidCollapsedTitle": "Matcha"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "46a62da5-8329-4bb7-86b0-1e2bb1f8b7e2"
      }
    },
    "owner": "autonomy"
  }
}
